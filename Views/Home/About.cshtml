<div class="center-wrapper">
    <div class="hero-section">
        <h1>Citlali</h1>
        <p class="subtitle">A cute webboard which brings people together~</p>
    </div>
    
    <div class="content">
        <section class="team-section">
            <h2>Meeting developers</h2>
            <p class="team-intro">
                Citlali was developed as part of the Computer Engineering course at KMITL (King Mongkut's Institute of Technology Ladkrabang).
                Meet our talented developers who brought this project to life.
            </p>
            
            <div class="team-grid">
                @foreach (var dev in developers)
                {
                    <div class="dev-card">
                        <div class="dev-avatar">
                            <img src="@dev.AvatarUrl" alt="@dev.Name">
                        </div>
                        <div class="dev-info">
                            <h3>@dev.Name</h3>
                            <p class="dev-role">@dev.Role</p>
                            <p class="dev-bio">@dev.Bio</p>
                            <div class="dev-links">
                                <a href="https://github.com/@dev.GitHubUsername" target="_blank" class="github-link">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
