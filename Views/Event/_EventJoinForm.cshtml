@model Citlali.Models.EventFormDto;

<div class="event-form detail-column">
    <form class="form-form" asp-action="onboarding" style="width: 100%;" method="post" enctype="multipart/form-data">
        <h1>Just a few quick questions ðŸ’¬</h1>
        <p>Help the event creator get to know you better!</p>
        <div class="form-data">
            @for (var i = 0; i < Model.Questions.Count; i++)
            {
                <div class="form-group">
                    <label for="@Model.Questions[i]">@Model.Questions[i].Question</label>
                    <input asp-for="@Model.Questions[i]" class="form-control" value=@Model.Questions[i].Answer />
                    <span asp-validation-for="@Model.Questions[i].Answer" class="text-danger"></span>
                </div>
            }
        </div>
        <div class="justify-flex-end">
            <button class="form-submit" type="submit">Requet to join</button>
        </div>
    </form>
</div>