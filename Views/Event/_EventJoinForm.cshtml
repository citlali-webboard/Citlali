@model Citlali.Models.EventFormDto;


<div class="event-form detail-column">
    <form class="form-form" asp-action="join" style="width: 100%;" method="post" enctype="multipart/form-data">
        <div class="form-data">

            @for (var i = 0; i < Model.Questions.Count; i++)
            {
                <div class="form-group">
                    <label asp-for="Questions[i].Question" >@Model.Questions[i].Question</label>
                    <input asp-for="Questions[i].Answer" class="form-control" value=@Model.Questions[i].Answer />
                    <span asp-validation-for="Questions[i].Answer" class="text-danger"></span>
                </div>
            }
        </div>
        <div class="justify-flex-end">
            <button class="form-submit" type="submit">Requet to join</button>
        </div>
    </form>
</div>