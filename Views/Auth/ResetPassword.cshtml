@model Citlali.Models.AuthResetPasswordDto;

@section head {
  <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
}

@{
  Layout = "_LayoutBase";
  ViewData["Title"] = "Sign Up";

  string SideImageUrl =
  "http://citlali-supabase.code4.dad/storage/v1/object/public/CITLALI_USER_PROFILE_PICTURE/public/citlali-reset-password.webp";
}


<div class="form-container">
  <div class="form-content">
    <div class="form-img">
      <img src="@SideImageUrl" alt="Reset Password Illustration">
    </div>
    <div class="form-data">
      <h2>ðŸ©· Citlali ðŸ©·</h2>
      <h3>Reset your password</h3>
      <div class="form-input">
        <form asp-action="resetpassword" method="post" enctype="multipart/form-data" onsubmit="return validatePassword()">
          <div class="form-group">
            <label for="Password">
              <div class="icon">
                @(await Html.RenderComponentAsync<FluentIcon<Icons.Regular.Size24.LockClosed>>
                  (RenderMode.ServerPrerendered, new { Color = Color.Neutral }))
              </div>
            </label>
            <input asp-for="Password" id="Password" placeholder="Password" type="password" />
            <span asp-validation-for="Password"></span>
          </div>

          <div class="form-group" #>
            <label for="Confirm-Password">
              <div class="icon">
                @(await Html.RenderComponentAsync<FluentIcon<Icons.Regular.Size24.LockClosed>>
                  (RenderMode.ServerPrerendered, new { Color = Color.Neutral }))
              </div>
            </label>
            <input asp-for="ConfirmPassword" id="Confirm-Password" placeholder="Confirm Password" type="password" />
            <span asp-validation-for="ConfirmPassword"></span>
          </div>

          <button type="submit" class="btn-submit">Reset Password</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  function validatePassword() {
    var password = document.getElementById("Password").value;
    var confirmPassword = document.getElementById("Confirm-Password").value;
    if (password != confirmPassword) {
      alert("Passwords do not match.");
      return false;
    }
    return true;
  }
</script>