    <link rel="stylesheet" href="~/css/ErrorHandle.css">
    <link rel="stylesheet" href="~/css/FluentUiVariables.css">
    <link rel="stylesheet" href="~/Citlali.styles.css" asp-append-version="true" />
    @RenderSection("head", required: false)
</head>

@await Html.PartialAsync("_Navbar", navModel)
<body>
    @if (TempData["Error"] != null)
    {
        <div id="error-popup" class="error-popup">
