@model Citlali.Models.FollowViewModel

<head>
    <link rel="stylesheet" href="~/css/Follow.css" />
    <script src="~/js/Follow.js"></script>
</head>

<div class="follow-page">
    <div class="follow-header">
        <h1>Following</h1>
        <button class="close-btn" onclick="closeFollowPopup()">&times;</button>
    </div>
    
    <div class="search-box">
        <input type="text" placeholder="Search" id="searchInput" onkeyup="filterUsers()" />
    </div>

    <div class="follow-list" id="followList">
        <h2>Users</h2>
        @foreach (var user in Model.Users)
        {
            <div class="follow-item">
                <div class="follow-info">
                    <img src="@user.ProfileImageUrl" alt="@user.DisplayName" />
                    <h2>@user.DisplayName</h2>
                    <p>@user.Username</p>
                </div>
                <button class="follow-btn" onclick="toggleFollow('@user.Username', false)">Remove</button>
            </div>
        }
        <h2>Tags</h2>
        @foreach (var tag in Model.Tags)
        {
            <div class="follow-item">
                <div class="follow-info">
                    <h2>@tag.TagEmoji @tag.TagName</h2>
                </div>
                <button class="follow-btn" onclick="toggleFollowTag('@tag.TagId', false)">Remove</button>
            </div>
        }
    </div>
</div>