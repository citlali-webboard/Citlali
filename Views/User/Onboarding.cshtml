@model Citlali.Models.UserOnboardingDto

@{
    @* string profileImageUrl = Environment.GetEnvironmentVariable("DEFAULT_PROFILE_IMAGE_URL") ?? "";
     *@
    string UserEmail = Model?.Email ?? "No email provided";
    string profileImageUrl = "http://citlali-supabase.bigblahaj.com/storage/v1/object/public/CITLALI_USER_PROFILE_PICTURE/public/citlali-drunk.jpeg";
}
<!DOCTYPE html>

<style>
body {
    margin: 0;
    padding: 0;
    background-color: #ffffff;
    position: relative;
}

.form-container{

    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    
    width: 100vw;
    height: 90vh;
    transform: translateY(6%);

    
    background-color: #ffffff;
    border-radius: 10px;
}

.content{
    position: relative;
    display: flex;
    flex-direction: column;
    background-color: #ffffff;
    border-radius: 5%;
    box-shadow: 5px 5px 10px 5px rgba(0, 0, 0, 0.3);
    width: 70%;
    height: 100%;
    padding: 1% 0% 1% 0% ;
    justify-content: center;
    align-items: center;
}

.form-content{
    display: flex;
    flex-direction: row-reverse;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 100%;

}

.form-data{
    width: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
}

.form-img{
    width: 50%;
    height: 60%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.form-img img{
    width: 70%;
    height: auto;
    object-fit: cover;
    border-radius: 50%;
    aspect-ratio: 1 / 1; 
}

.form-group{
    display: flex;
    flex-direction: column;
    margin-bottom: 10px;
    width: 100%;
}

h2{
    display: flex;
    justify-content: center;
    font-size: 2rem;
    margin: 0;
    padding: 0;
    width: 100%;
}

#text-upload-file {
    color: var(--white-color);
    font-size: 16px;
}

.upload-file-button {
    margin-top: 4%;
    background-color: var(--text-gray-color);
    display: inline-block;
    padding: 8px 16px;  
    cursor: pointer;
    border-radius: 15px;
    text-align: center;
    transition: 0.2s;
}

.upload-file-button:hover{
    background-color: #F5C2E7;
}

.form-img input[type="file"] {
    display: none;
}

.sign-up-button{
    width: 40%;
    padding: 10px;
    background-color: #7fdb7f;
    color: #ffffff;
    font-size: 18px;
    font-weight: bold;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: 0.3s;
}

.sign-up-button:hover{
    background-color: #72c572;
}

.form-group input{
    width: 70%;
    padding: 10px;
    border: 1px solid var(--text-gray-color);
    border-radius: 5px;
    font-size: 16px;
    box-shadow: 0 0 5px 0 rgba(0, 0, 0, 0.3);
}

.form-group textarea{
    width: 70%;
    padding: 10px;
    border: 1px solid var(--text-gray-color);
    border-radius: 5px;
    font-size: 16px;
    box-shadow: 0 0 5px 0 rgba(0, 0, 0, 0.3);
}

textarea{
    resize: none;
}

.tags-container{
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    width: 80%;
}

.tags-container .tags{
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start;
}

.tags-container .tags .tag{
    display: inline-block;
    margin: 3px;
    padding: 4px 8px 4px 8px ;
    border: 2px solid var(--text-gray-color);
    border-radius: 30px;
    cursor: pointer;
}

.tags-container .tags .tag:hover{
    background-color: var(--pink-color);
    border: 2px solid var(--pink-color);
}

</style>
<html lang="en">

@* <head>
    <link rel="stylesheet" href="~/css/Register.css?v=1.0" asp-append-version="true" />
</head> *@

<body>
    <form class="form-container" asp-action="onboarding" method="post" enctype="multipart/form-data">
        <div class="content">
            <h2>ðŸ©· Citlali Account ðŸ©·</h2>
            <div class="form-content">
                <div class="form-data">
                    <div class="form-group">
                        <label for="Email">Email</label>
                        <input asp-for="Email" class="form-control" value=@UserEmail id="Email" disabled/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="DisplayName">Display Name</label>
